generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String  @id @default(uuid())
  email    String  @unique
  password String
  name     String
  photoUrl String?
}

model Room {
  id        Int      @id @default(autoincrement())
  slug      String   @unique // for public url
  createdAt DateTime @default(now())
}

model Chat {
  id Int @id @default(autoincrement())
}
